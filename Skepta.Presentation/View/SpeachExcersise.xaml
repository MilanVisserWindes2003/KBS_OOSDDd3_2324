<Page x:Class="WpfProject.SpeachExcersise"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfProject"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="SpeachExcersise">
    <Grid>
        <TextBox Height="200" Margin="0,119,0,115" Text="{Binding TypedText}"/>
        <Button Height="50" Width="80" Margin="444,331,276,53" Click="Speak" Content="Hear audio"/>
        <ComboBox HorizontalAlignment="Left" Margin="26,22,0,0" VerticalAlignment="Top" Width="120" SelectedValue="{Binding SelectedSpeedOption}" SelectedValuePath="Content">
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="0"/>
            <ComboBoxItem Content="-2"/>
        </ComboBox>
    </Grid>
</Page>

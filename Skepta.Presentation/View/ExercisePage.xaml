<UserControl x:Class="Skepta.Presentation.View.ExercisePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Skepta.Presentation.View"
      mc:Ignorable="d" 
      d:DesignHeight="1008" d:DesignWidth="1920">


    <Grid Background="Azure">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="0" Grid.Column="0">
            <ContentPresenter Content="{Binding DifficultySelect}"/>
        </Viewbox>
        <Viewbox Grid.Row="0" Grid.Column="1">
            <ContentPresenter Content="{Binding LenghtSelect}"/>
        </Viewbox>
        <Viewbox Grid.Row="1" Grid.Column="0">
            <ContentPresenter Content="{Binding ExerciseTypeSelect}"/>
        </Viewbox>

        <Border BorderBrush="Black" BorderThickness="1" Grid.Row="1" Grid.Column="1" Margin="10">
            <StackPanel Orientation="Vertical">
                <Button Content="Verder" Command="{Binding Verder}"/>
            </StackPanel>
        </Border>

    </Grid>

</UserControl>

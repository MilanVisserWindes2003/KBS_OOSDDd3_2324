<Page x:Class="WpfProject.TextExcersize" Focusable="True"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfProject"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="TextExcersize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Name="TextBlock" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="{Binding Path=RandomText, StringFormat=''}" VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="1"/>
        <TextBlock x:Name="InputTextBlock" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="" Margin="10" VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="2"/>
    </Grid>
</Page>

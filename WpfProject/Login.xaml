<Page x:Class="WpfProject.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>
        <Label Content="Welcome to Skepta&#xD;&#xA;" HorizontalAlignment="Center" Margin="0,64,0,0" VerticalAlignment="Top" Height="44" Width="224" FontWeight="Bold" FontSize="22"/>
        <Label Content="Login:" HorizontalAlignment="Left" Margin="312,146,0,0" VerticalAlignment="Top" Width="61" Height="35" FontWeight="Bold" FontSize="16"/>
        <Label Content="Wachtwoord:&#xD;&#xA;" HorizontalAlignment="Left" Margin="312,0,0,0" VerticalAlignment="Center" FontWeight="Bold" FontSize="16" Height="34" Width="115"/>
        <TextBox HorizontalAlignment="Left" Height="29" Margin="312,174,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="146" FontWeight="Bold" TextChanged="TextBox_TextChanged"/>
        <TextBox HorizontalAlignment="Left" Height="30" Margin="312,234,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="146" FontWeight="Bold"/>
        <Button Content="Registreer" HorizontalAlignment="Left" Margin="312,335,0,0" VerticalAlignment="Top" Click="Button_Click" FontWeight="Bold" Background="#FF057BFF" Foreground="White" Width="146"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="312,279,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="20" Width="146" Background="#FF0079FF" Foreground="White" RenderTransformOrigin="0.758,-1.117"/>
        <Label Content="Login met je Skepta account" HorizontalAlignment="Left" Margin="312,108,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Nog geen account? Maak een account aan" HorizontalAlignment="Left" Margin="261,304,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

    </Grid>
</Page>
